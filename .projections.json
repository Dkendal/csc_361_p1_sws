{
  "*": {
    "dispatch": "make test",
    "make": "make"
  },
  "src/*.h": {
    "alternate": "src/{}.cc",
    "type": "header"
  },
  "src/*.cc": {
    "alternate": ["tests/{}_test.cc"],
    "type": "source",
  },
  "tests/*_test.cc": {
    "alternate": "src/{}.cc",
    "type": "test",
    "template": "#include <gtest/gtest.h>\n\nTEST ()\n{\n}"
  }
}
